<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="65dp"
    android:id="@+id/chat_head_root"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Profile image for the chat head.-->
    <ImageView
        android:id="@+id/chat_head_event_page"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/chat_head_return"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:id="@+id/chat_head_get_event"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/chat_head_event_page"
        android:src="@drawable/chat_head_took"
        tools:ignore="ContentDescription" />
 <ImageView
        android:id="@+id/chat_head_giveup_event"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/chat_head_get_event"
        android:src="@drawable/chat_head_giveup"
        tools:ignore="ContentDescription" />

